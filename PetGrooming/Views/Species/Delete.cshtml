@model PetGrooming.Models.Species

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Species</h2>

<p>Are you sure you want to delete this?</p>
<div>
    <table>
        <tbody>
            <tr>
                <th>Name:</th>
                <td>@Model.Name</td>
            </tr>

        </tbody>

    </table>

    <form action="/Species/Delete/@Model.SpeciesID" method="post">
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </form>



</div>
<div>
    <a href="/Species/List">Back to List</a>
</div>

